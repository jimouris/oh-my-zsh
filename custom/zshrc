#   # echo "Welcome, jimouris" | cowsay -f ${COWS[$idx]} | lolcat
#   motivate | cowsay -f ${COWS[$idx]} | lolcat
# }
# randomsay

export PATH="/usr/lib/ccache:$PATH"
export PATH="/usr/local/sbin:$PATH"

